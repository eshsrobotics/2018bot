<project name="DriverStationClientCodeBuild" default="build">


    <property name="build.dir" value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="source.dir" value="networktables-input"/>

    <echo message="${build.classpath}" />

    <target name="build" description="Builds a stand-alone, client JAR file that can be deployed on driver station.  The JAR program handles both vision processing and keyboard input.">
        <mkdir dir="${classes.dir}"/>
        <javac destdir="${classes.dir}"
               debug="on"
               includeAntRuntime="false"
               verbose="true">
            <src path="${source.dir}" />
            <include name="**/*.java" />
            <!-- <classpath refid="build.classpath" /> -->
            <classpath>
                <pathelement location="lib/*.jar"/>
            </classpath>
        </javac>

        <!-- <jar destfile="networktables-input.jar"
             basedir="."
             includes="">
             <manifest>
             <attribute name="Main-Class" value="main.NetworkTablesInput" />
             <attribute name="Class-Path" value="." />
             </manifest>
             </jar> -->
    </target>
</project>
